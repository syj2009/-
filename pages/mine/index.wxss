page{
  margin: 0 auto;
  height: 100%;
  background-color: #eee;
}
.contain{
  width: 710rpx;
  height: 200rpx;
  margin: auto;
  text-align: center;
}
.back-red{
  z-index: -1;
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 190rpx;
  background-color: #EB6550;
}
.sitting{
  height: 105rpx;
}

/* 用户信息 */
.view-information{
  border-radius: 8rpx;
  background-color: #fff;
}
.view-head{
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 100%;
  height: 120rpx;
}
.head-image{
  height: 120rpx;
  width: 120rpx;
  border: 3rpx solid #fff;
  border-radius: 80rpx;
}
.information{
  padding-top: 55rpx;
}
.name{
  font-size: 36rpx;
  color: #333;
  margin: 12rpx 0;
}
.school-name{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.bianji{
  position: relative;
  width: 100%;
  height: 100%;
}
.bianji-img{
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  height: 40rpx;
  width: 40rpx;
}

.content{
  margin-top: 20rpx;
  background-color: #fff;
  text-align: left;
}
.visiting-card,.VIP-member,.Inviting-VIP,.binding-mechanism,.dry-goods-sharing,.feedback{
  width: 650rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #333;
  margin-left: 34rpx;
  margin-right: 40rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.binding-mechanism,.feedback{
  border-bottom: 0;
}
.card-img{
  width: 36rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.jinru{
  float: right;  
  width: 14rpx;
  height: 24rpx;
  margin-top:35rpx;
  margin-right: 10rpx;
}