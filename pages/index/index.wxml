<view class='contain'>
  <view class='swiper-container'>
    <swiper  indicator-dots="true" circular="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image"  mode="scaleToFill"/>
            </swiper-item>
        </block>
    </swiper>
  </view>
  <view class='model-list'>
    <view class='model-item'>
      <view class='top-view'>
        <view class='show-img'>
          <image src='../../image/index/banner.png' class='model-img'></image>
        </view>
        <view class='school-view'>
          <view class='school-title'>青岛托普学校</view>
          <view class='label-list'>
            <text class='websiteItem'>微官网</text>
            <text class='classItem'>微班级</text>
            <text class='statuesItem'>已停用</text>
          </view>
        </view>
      </view>
      <view class='bottom-view'>
        <view class='btn-view'>
          <image image src='../../image/index/zhuanfa.png' class='btn-icon'></image>
          <text class='btn-title' bindtap='shareForYou'>转发</text>
        </view>
        <view class='btn-more'>
          <image image src='../../image/index/setting.png' class='btn-icon'></image>
          <text class='btn-title' bindtap='openActionSheet'>更多</text>
        </view>
      </view>
    </view>
  </view>
  <image image src='../../image/index/add-icon.png' class='add-model' bindtap='goModelList'></image> 
  <view class="weui-tab">
    <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>
    <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">选项一的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
    </view>
  </view>
</view>
