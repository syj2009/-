.contain {
  width: 100%;
  height: 100%;
}

.website-bg-img {
  width: 100%;
  background-size: 100%;
  background-repeat: repeat-y;
}


.head-view {
  text-align: center;
  padding-top: 120rpx;
}

.head-img {
  width: 200rpx;
  height: 350rpx;
}

/*描述图片  */
.class-describe-view {
  width: 642rpx;
  height: 374rpx;
  margin: 0 auto;
  border: 28rpx solid rgba(100, 207, 176, 0.6);
  margin-top: 80rpx;
}

.class-describe-img {
  width: 642rpx;
  height: 374rpx;
}

/*介绍类的边框  */
.fit-describe-view {
  width: 602rpx;
  margin: 0 auto;
  border: 28rpx solid rgba(100, 207, 176, 0.6);
  margin-top: 80rpx;
  padding: 66rpx 20rpx 40rpx;
}

.head-title {
   width: 602rpx;
   background-repeat: no-repeat;
   background-size: 100%;
   text-align: center;
}

.input-box {
  color: #fff;
}

.content-describe {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  font-size: 28rpx;
  color: #666;
}

.fit-describe-img {
  width: 602rpx;
  height: 374rpx;
}

/*班级课程图片的样式  */

.course-img-box {
  margin-top: 50rpx;
  position: relative;
}

.fit-describe-span {
  position: absolute;
  bottom: 0rpx;
  height: 92rpx;
  width: 100%;
  background-color: rgba(100, 207, 176, 0.8);
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx;
}

.course-title {
  font-size: 34rpx;
  color: #000;
  margin-top: 30rpx;
}

.course-item {
  margin-bottom: 50rpx;
}

.course-item:last-child {
  margin-bottom: 0rpx;
}

/*底部报名页面  */
.school-info {
  text-align: center;
  margin-top: 120rpx;
}

.school-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.school-title {
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

.school-code {
  width: 200rpx;
  height: 200rpx;
}

.code-describe {
  margin-top: 20rpx;
}

.input-view {
  margin-top: 30rpx;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  margin: 30rpx auto;
}

.input-name {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #000;
}

.signUp {
  width: 50%;
  height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 80rpx;
  background-color: rgb(100, 207, 176);
  line-height: 80rpx;
  margin: 60rpx auto;
  margin-bottom: 0;
}

.website-bg-img {
  padding-bottom: 50rpx;
}