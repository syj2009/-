page{
  width: 100%;
  height: 100%;
}
 .contain{
  width: 100%;
  height: 100%;
  text-align: center;
} 
.content{
  width: 75%;
  margin: auto;
  text-align: center;
}
.head{
  width: 120rpx;
  height: 120rpx;
  margin-top: 100rpx;
  border-radius: 60rpx;
}
.name{
  font-size: 36rpx;
  color: #333;
  margin: 20rpx 0;
}
.institutionName{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 56rpx; 
}
.view-mobile,.view-address{
  text-align: left;
  font-size: 32rpx;
  margin-bottom: 30rpx; 
}
.view-address{
  display : flex ;
  flex-flow : row;
}
.mobile-prompt,.address-prompt{
  width: 44%;
  color: #666;
}
.mobile,.address{
  color: #333;
  line-height: 36rpx;
  padding-left: 20rpx;
}
.view-code{
  position: relative;
  margin-top: 60rpx;
  margin-bottom: 26rpx;
}
.dotted-line{
  position: absolute;
  top:0;
  left: 280rpx;
  width: 190rpx;
  height: 190rpx;
}
.QRCode{
  margin-top: 15rpx;
  width: 160rpx;
  height: 160rpx;
}
.prompt{
  font-size: 26rpx;
  color: #999;
}