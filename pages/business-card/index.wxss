page{
  width: 100%;
  height: 100%;
}
 .contain{
  width: 100%;
  height: 100%;
  text-align: center;
} 
.content{
  width: 75%;
  margin: auto;
  text-align: center;
}
.head{
  width: 120rpx;
  height: 120rpx;
  margin-top: 100rpx;
  border-radius: 60rpx;
}
.name{
  font-size: 36rpx;
  color: #333;
  margin: 20rpx 0;
}
.institutionName{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 56rpx; 
}
.view-mobile,.view-address{
  text-align: left;
  font-size: 32rpx;
  margin-bottom: 30rpx; 
}
.view-address{
  display : flex ;
  flex-flow : row;
}
.mobile-prompt,.address-prompt{
  width: 44%;
  color: #666;
}
.mobile,.address{
  color: #333;
  line-height: 36rpx;
  padding-left: 20rpx;
}
.view-code{
  width: 190rpx;
  height: 190rpx;
  margin: auto;
  margin-top: 60rpx;
  margin-bottom: 26rpx;
}
.QRCode{
  margin: 15rpx;
  width: 160rpx;
  height: 160rpx;
}
.prompt{
  font-size: 26rpx;
  color: #999;
}
/*分享*/
.share{
  margin: auto;
  width: 270rpx;
  height: 177rpx;
  margin-top:110rpx;
  border-top-left-radius: 160rpx 177rpx;
  border-top-right-radius: 160rpx 177rpx;
  border-bottom-left-radius: 20rpx 40rpx;
  border-bottom-right-radius: 20rpx 40rpx;
  opacity:0;
}