page{
  width: 100%;
  height: 100%;
}
 .contain{
  width: 100%;
  height: 100%;
   /* padding-top:65rpx;    */
  text-align: center;
} 
.sitting{
  height: 60rpx;
}
.content{
  width: 76%;
  height: 90%;
  margin: auto;
  text-align: center;
  padding:0 30rpx;
  background-color: #fff;
}
.head{
  width: 120rpx;
  height: 120rpx;
  margin-top: 66rpx;
  border-radius: 60rpx;
}
.name{
  font-size: 36rpx;
  color: #333;
  margin: 20rpx 0;
}
.institutionName{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 66rpx; 
}
.view-mobile,.view-address{
  text-align: left;
  font-size: 32rpx;
  margin-bottom: 30rpx; 
}
.view-address{
  display : flex ;
  flex-flow : row;
}
.mobile-prompt,.address-prompt{
  width: 45%;
  color: #666;
}
.mobile,.address{
  color: #333;
  line-height: 36rpx;
  padding-left: 20rpx;
}
.view-code{
  width: 250rpx;
  height: 250rpx;
  margin: auto;
  margin-top: 60rpx;
  margin-bottom: 30rpx; 
}
.QRCode{
  width: 210rpx;
  height: 210rpx;
  margin: 20rpx;
}
.prompt{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 100rpx;
}